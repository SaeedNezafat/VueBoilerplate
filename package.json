{
  "name": "config-project",
  "description": "config typescript - husky - prettier - eslint",
  "productName": "eBus",
  "author": "Saeed Nezafat",
  "version": "0.0.1",
  "type": "module",
  "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.ts --fix --ignore-path .gitignore",
    "prettier": "prettier --write \"src/**/*.{js,jsx,ts,tsx,vue}\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,vue,jsx}": "eslint . --ext --fix .gitignore",
    "*.{scss,vue}": "stylelint --fix"
  },
  "dependencies": {
    "pinia": "^2.0.31",
    "pinia-plugin-persistedstate": "^3.1.0",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@types/node": "^18.14.0",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.9.0",
    "husky": "^8.0.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "autoprefixer": "^10.4.13",
    "prettier": "2.8.4",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vue-tsc": "^1.0.24"
  }
}
